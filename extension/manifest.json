{
  "name": "Stay Fresh",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Reacts to Vim events and does stuff in Chrome.",
  
  "browser_action": {
    "default_icon": "images/v-white-38.png",
    "default_title": "Vim Stay Fresh"
  },

  "background": {
    "persistant": false,
    "scripts": [
      "/background.js"
    ]
  },

  "icons": {
    "128": "images/v-pink-128.png",
    "48": "images/v-pink-48.png",
    "16": "images/v-pink-16.png"
  },

  "permissions": [
    "tabs",
    "nativeMessaging"
  ]
}
