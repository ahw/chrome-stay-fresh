{
  "name": "Stay Fresh",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Reacts to Vim events and does stuff in Chrome.",
  
  "browser_action": {
    "default_icon": "/vim-logo-green-shadow-38.png",
    "default_title": "Vim Stay Fresh"
  },

  "background": {
    "persistant": false,
    "scripts": [
      "/background.js"
    ]
  },

  "icons": {
    "16": "/vim-logo-green-shadow-16.png",
    "19": "/vim-logo-green-shadow-19.png",
    "38": "/vim-logo-green-shadow-38.png",
    "48": "/vim-logo-green-shadow-48.png",
    "128": "/vim-logo-green-shadow-128.png"
  },

  "permissions": [
    "tabs",
    "nativeMessaging"
  ]
}
