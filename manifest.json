{
  "name": "Stay Fresh",
  "manifest_version": 2,
  "version": "0.2",
  "description": "Reacts to Vim events and does stuff in Chrome.",
  
  "browser_action": {
    "default_icon": "/extension/vim-16.png",
    "default_title": "Vim Stay Fresh",
    "default_popup": "/extension/popup.html"
  },

  "background": {
    "persistant": false,
    "scripts": [
      "/extension/main-background.js"
    ]
  },

  "icons": {
    "16": "/extension/vim-16.png",
    "48": "/extension/vim-48.png",
    "128": "/extension/vim-128.png"
  },

  // TODO: Which of these are actually needed?
  "permissions": [
    "tabs",
    "*://*/*",
    "*://localhost/*",
    "nativeMessaging"
  ]

  // TODO: remove this.
  // "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
}
