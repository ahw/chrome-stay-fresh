  "icons": {
    "16": "/vim-16.png",
    "48": "/vim-48.png",
    "128": "/vim-128.png"
  },

  "permissions": [
    "tabs",
    "*://*/*",
    "*://localhost/*",
    "nativeMessaging"
  ]

